extends ../layout

block content
  
  .page-header
    h1 LA.js Job Board

    .new
      a(href='/jobs/new') Create Job Posting

    if currentUser
      .my-jobs
        a(href='/my/jobs') View My Jobs

  .jobs.row
    .span12

      table.table.table-striped.table-bordered
        each job in jobs
          tr
            td
              a(href="/jobs/#{job._id}")
                span.position
                  = job.position
                span.filler at
                span.company
                  = job.company
                span.filler in
                span.location
                  = job.location
                span.created_at
                  time.timeago(datetime=job.activated_at.toISOString())
                