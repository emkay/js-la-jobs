extends layout

block content
  h1 LA.js Job Board

  .new
    a(href='/jobs/new') Create Job Posting

  table.table.table-striped
    thead
      tr
        th Location
        th Position
        th Company
        th Date

    tbody
      each job in jobs
        tr
          td= job.location
          td= job.position
          td= job.company
          td= job.date
